---
interface Props {
  variant?: 'primary' | 'secondary';
}

const { variant = 'primary' } = Astro.props;
---

<div class={variant === 'primary' ? 'w-full' : 'w-full max-w-md mx-auto'}>
  <form 
    class="flex flex-col gap-4"
    method="POST"
    action="#"
    aria-label="Newsletter signup form"
  >
    <div class="flex flex-col sm:flex-row gap-4">
      <input
        type="email"
        name="email"
        placeholder="Enter your email"
        required
        class="flex-1 px-6 py-4 border-2 border-black font-body text-black placeholder:text-black/60 focus:outline-none focus:border-violent-red transition-colors rounded-2xl sm:rounded-r-none sm:rounded-l-2xl"
        aria-label="Email address"
      />
      <button
        type="submit"
        class="px-8 py-4 bg-violent-red text-white font-heading font-bold uppercase tracking-wide hover:bg-black transition-colors whitespace-nowrap rounded-2xl sm:rounded-l-none sm:rounded-r-2xl"
      >
        Subscribe
      </button>
    </div>
    <p class="text-sm font-body text-black/70">
      <!-- PLACEHOLDER: Add your newsletter description text here -->
      Join thousands of subscribers receiving weekly insights and updates.
    </p>
  </form>
</div>

