---
interface Props {
  title: string;
  description: string;
  link?: string;
}

const { title, description, link = '#' } = Astro.props;
---

<article class="border-2 border-green-dark p-8 hover:border-green-light transition-colors bg-navy/50 rounded-2xl">
  <h3 class="text-2xl font-heading font-bold uppercase mb-4 text-white">
    {title}
  </h3>
  <p class="font-body text-white/80 mb-6">
    {description}
  </p>
  {link !== '#' && (
    <a 
      href={link}
      class="inline-block font-body text-sm uppercase tracking-wide text-green-light hover:text-green transition-colors"
    >
      View Project â†’
    </a>
  )}
</article>

